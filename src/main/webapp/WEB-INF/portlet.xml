<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
	                    http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0">

	<portlet>
		<portlet-name>MyGPS</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/spring/portlet/MyGPS-portlet.xml</value>
		</init-param>
		<!-- This value is to 0 in dev, can set to cache at a positive value in seconds 
			for caching, or -1 to never expire cache -->
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>MyGPS</title>
		</portlet-info>
		<security-role-ref>
			<role-name>AccessType_ARC</role-name>
			<role-link>Academic Resource Center</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_CNSL</role-name>
			<role-link>Counseling Services</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_DIS</role-name>
			<role-link>Disability</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_DSW</role-name>
			<role-link>Displaced Workers</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_EAL</role-name>
			<role-link>Early Alert</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_ESL</role-name>
			<role-link>English as a Second Language</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_FFC</role-name>
			<role-link>Fast Forward</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_ILP</role-name>
			<role-link>Individualized Learning Plan</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_MGR</role-name>
			<role-link>Manager</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_STAFF</role-name>
			<role-link>Staff</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Academic_Counselor_Advisor</role-name>
			<role-link>Academic Counselor or Advisor</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Counselor</role-name>
			<role-link>Counselor</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Developer</role-name>
			<role-link>Developer</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Faculty</role-name>
			<role-link>Faculty</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Management</role-name>
			<role-link>Management</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Student</role-name>
			<role-link>Student</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Super_User</role-name>
			<role-link>Super User</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Support_Staff</role-name>
			<role-link>Support Staff</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Anonymous</role-name>
			<role-link>Anonymous</role-link>
		</security-role-ref>
	</portlet>
	

    <portlet>
        <portlet-name>SSP</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/spring/portlet/SSP-portlet.xml</value>
        </init-param>
        <!-- This value is to 0 in dev, can set to cache at a positive value in seconds 
            for caching, or -1 to never expire cache -->
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>SSP</title>
        </portlet-info>
		<security-role-ref>
			<role-name>AccessType_ARC</role-name>
			<role-link>Academic Resource Center</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_CNSL</role-name>
			<role-link>Counseling Services</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_DIS</role-name>
			<role-link>Disability</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_DSW</role-name>
			<role-link>Displaced Workers</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_EAL</role-name>
			<role-link>Early Alert</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_ESL</role-name>
			<role-link>English as a Second Language</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_FFC</role-name>
			<role-link>Fast Forward</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_ILP</role-name>
			<role-link>Individualized Learning Plan</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_MGR</role-name>
			<role-link>Manager</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>AccessType_STAFF</role-name>
			<role-link>Staff</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Academic_Counselor_Advisor</role-name>
			<role-link>Academic Counselor or Advisor</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Counselor</role-name>
			<role-link>Counselor</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Developer</role-name>
			<role-link>Developer</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Faculty</role-name>
			<role-link>Faculty</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Management</role-name>
			<role-link>Management</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Student</role-name>
			<role-link>Student</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Super_User</role-name>
			<role-link>Super User</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Support_Staff</role-name>
			<role-link>Support Staff</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Role_Anonymous</role-name>
			<role-link>Anonymous</role-link>
		</security-role-ref>
    </portlet>
    

	<filter>
		<filter-name>SspSecurityFilter</filter-name>
		<filter-class>org.jasig.ssp.security.uportal.UPortalSecurityFilter</filter-class> 
		<lifecycle>RENDER_PHASE</lifecycle>
	</filter> 

	<filter-mapping> 
		<filter-name>SspSecurityFilter</filter-name>
		<portlet-name>*</portlet-name> 
	</filter-mapping>

