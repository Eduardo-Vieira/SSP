<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="Add demo test term FA12" author="dan.mccallum">
		<preConditions onFail="MARK_RAN"
					   onFailMessage="FA12 term exists, skipping insert">
			<tableExists tableName="config" />
			<sqlCheck expectedResult="0">select count(code) from v_external_term where code = 'FA12'
			</sqlCheck>
		</preConditions>
		<insert tableName="external_term">
			<column name="name" value="Fall 2012" />
			<column name="code" value="FA12" />
			<!-- We'll assume most deploys are Eastern time. Try to take
			 DST into account. -->
			<column name="start_date" value="2012-08-22T04:00:00" />
			<column name="end_date" value="2012-12-07T04:59:59" />
			<column name="report_year" value="2012" />
		</insert>
	</changeSet>
