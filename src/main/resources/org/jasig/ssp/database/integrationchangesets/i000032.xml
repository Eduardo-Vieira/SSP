<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<property name="schema" value="public" dbms="postgresql" />
	<property name="schema" value="dbo" dbms="mssql" />
	<property name="nvarchar.type" value="character varying" dbms="postgresql" />
	<property name="nvarchar.type" value="nvarchar" dbms="mssql" />
	<property name="externalUser" value="a new UUID" />
	<property name="check_for_manage_integration_database_config_sql"
			  value="select count(id) from config where name='manage_integration_database'" />
	<property name="should_manage_integration_database_sql"
			  value="select case lower(value) when 'true' then 'true' else 'false' end as value from config where name='manage_integration_database'" />

	<!-- Postgres-only b/c I can't figure out how to write a cross-platform
	boolean predicate -->
	<changeSet id="convert external_person.non_local_address to char (pg)" author="tony.arland"
			dbms="postgresql">
		<preConditions onFail="CONTINUE"
					   onFailMessage="Skip modifications to external_person.non_local_address field type in integration database (pg)">
			<sqlCheck expectedResult="1">${check_for_manage_integration_database_config_sql}
			</sqlCheck>
			<sqlCheck expectedResult="true">${should_manage_integration_database_sql}
			</sqlCheck>
		</preConditions>

		<dropView viewName="v_external_person" />

		<addColumn tableName="external_person">
			<column name="non_local_address_new" type="char(1)" defaultValue="N" />
		</addColumn>
		<update tableName="external_person">
			<column name="non_local_address_new" value="Y" />
			<where>non_local_address</where>
		</update>
		<update tableName="external_person">
			<column name="non_local_address_new" value="N" />
			<where>not non_local_address</where>
		</update>
		<dropColumn tableName="external_person" columnName="non_local_address" />
		<renameColumn tableName="external_person" oldColumnName="non_local_address_new" newColumnName="non_local_address" />
		<addNotNullConstraint tableName="external_person" columnName="non_local_address" columnDataType="char(1)" />

		<createView viewName="v_external_person">
			select ROW_NUMBER() OVER (ORDER BY school_id) as id,* from external_person
		</createView>
		<sql>grant all on v_external_person to ${database.app.username}</sql>
	</changeSet>

	<changeSet id="convert external_person.non_local_address to char (mssql)" author="tony.arland"
			   dbms="mssql">
		<preConditions onFail="CONTINUE"
					   onFailMessage="Skip modifications to external_person.non_local_address field type in integration database (mssql)">
			<sqlCheck expectedResult="1">${check_for_manage_integration_database_config_sql}
			</sqlCheck>
			<sqlCheck expectedResult="true">${should_manage_integration_database_sql}
			</sqlCheck>
		</preConditions>

		<dropView viewName="v_external_person" />

		<addColumn tableName="external_person">
			<column name="non_local_address_new" type="char(1)" defaultValue="N" />
		</addColumn>
		<update tableName="external_person">
			<column name="non_local_address_new" value="Y" />
			<where>non_local_address = 1</where>
		</update>
		<update tableName="external_person">
			<column name="non_local_address_new" value="N" />
			<where>non_local_address = 0</where>
		</update>
		<!-- SQLServer will blow up w/o the explicit drop on the default. PG,
		not so much -->
		<dropColumn tableName="external_person" columnName="non_local_address" />
		<renameColumn tableName="external_person" oldColumnName="non_local_address_new" newColumnName="non_local_address" />
		<addNotNullConstraint tableName="external_person" columnName="non_local_address" columnDataType="char(1)" />

		<createView viewName="v_external_person">
			select ROW_NUMBER() OVER (ORDER BY school_id) as id,* from external_person
		</createView>
		<sql>grant all on v_external_person to ${database.app.username}</sql>
	</changeSet>

</databaseChangeLog>