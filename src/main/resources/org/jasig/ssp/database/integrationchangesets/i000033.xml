<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
		
	<changeSet id=" external_course alter min-max cr.hrs to decimal" author="jim.stanley">
		<dropView viewName="v_external_course" />
		<modifyDataType tableName="external_course" columnName="min_credit_hours" newDataType="decimal(9,2)" />
		<modifyDataType tableName="external_course" columnName="max_credit_hours" newDataType="decimal(9,2)" />
		<createView viewName="v_external_course">
			select ROW_NUMBER() OVER (ORDER BY code) as id,* from external_course
		</createView>	
		<sql>grant all on v_external_course to ${database.app.username}</sql>
	</changeSet>

</databaseChangeLog>