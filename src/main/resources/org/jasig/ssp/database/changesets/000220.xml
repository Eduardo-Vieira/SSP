<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="nvarchar.type" value="character varying" dbms="postgresql" />
    <property name="nvarchar.type" value="nvarchar" dbms="mssql" />

    <changeSet id="Create Notification table" author="paul.spaude">
        <createTable tableName="notification">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="subject" type="${nvarchar.type}(250)" >
                <constraints nullable="false" />
            </column>
            <column name="body" type="text" >
                <constraints nullable="false" />
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="modified_date" type="datetime" />
            <column name="created_by" type="uuid">
                <constraints nullable="false" foreignKeyName="notf_created_by_person_id"
                             references="person(id)" />
            </column>
            <column name="modified_by" type="uuid">
                <constraints nullable="true" foreignKeyName="notf_modified_by_person_id"
                             references="person(id)" />
            </column>
            <column name="object_status" type="int">
                <constraints nullable="false" />
            </column>
            <column name="expiration_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="duplicate_count" type="int">
                <constraints nullable="false" />
            </column>
            <column name="priority" type="${nvarchar.type}(25)">
                <constraints nullable="true" />
            </column>
            <column name="category" type="${nvarchar.type}(25)">
                <constraints nullable="true" />
            </column>
        </createTable>
        <createTable tableName="notification_recipient">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="modified_date" type="datetime" />
            <column name="created_by" type="uuid">
                <constraints nullable="false" foreignKeyName="notfr_created_by_person_id"
                             references="person(id)" />
            </column>
            <column name="modified_by" type="uuid">
                <constraints nullable="true" foreignKeyName="notfr_modified_by_person_id"
                             references="person(id)" />
            </column>
            <column name="object_status" type="int">
                <constraints nullable="false" />
            </column>
            <column name="notification_id" type="uuid">
                <constraints nullable="false" foreignKeyName="notf_id"
                             references="notification(id)" />
            </column>
            <column name="person_id" type="uuid">
                <constraints nullable="true" foreignKeyName="notfr_recipient_person_id"
                             references="person(id)" />
            </column>
            <column name="ssp_role" type="${nvarchar.type}(80)"/>
        </createTable>
        <sql>grant all on notification to ${database.app.username}</sql>
        <sql>grant all on notification_recipient to ${database.app.username}</sql>
        <rollback>
            <dropTable tableName="notification" />
            <dropTable tableName="notification_recipient" />
        </rollback>
    </changeSet>
</databaseChangeLog>
