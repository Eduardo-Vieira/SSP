<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="nvarchar.type" value="character varying" dbms="postgresql" />
    <property name="nvarchar.type" value="nvarchar" dbms="mssql" />

    <!-- Split this into a separate file since the changes to message in 000160.xml will need to be backported
    to pre-2.6.0 maintenance branches, but this change only applies to 2.6.0+ -->
    <changeSet author="dan.mccallum" id="widen message_archive.sent_* fields" >
        <modifyDataType tableName="message_archive" columnName="sent_from_address" newDataType="${nvarchar.type}(256)" />
        <modifyDataType tableName="message_archive" columnName="sent_reply_to_address" newDataType="${nvarchar.type}(256)" />
    </changeSet>

</databaseChangeLog>