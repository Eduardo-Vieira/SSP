<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
   
    <property name="schema" value="${database.schema}" />
    <property name="nvarchar.type" value="character varying" dbms="postgresql" />
    <property name="nvarchar.type" value="nvarchar" dbms="mssql" />
    
    <changeSet id="update config desc for map status additional criteria." author="tony.arland">
		<update tableName="config">
			<column name="description" 
			value="Map Status Report Config: In addition to the static matching criteria (term_code and formatted_course), implementors have the option to add additional criteria. COURSE_CODE will match MAP_PLAN_COURSE.COURSE_CODE to EXTERNAL_STUDENT_TRANSCRIPT_COURSE.COURSE_CODE.  COURSE_TITLE will match MAP_PLAN_COURSE.COURSE_TITLE to EXTERNAL_STUDENT_TRANSCRIPT_COURSE.TITLE and CREDIT_HOURS will match MAP_PLAN_COURSE.CREDIT_HOURS with EXTERNAL_STUDENT_TRANSCRIPT_COURSE.CREDIT_EARNED"></column>
			<where>name = 'map_plan_status_addition_course_matching_criteria'</where>
		</update> 
    </changeSet>
</databaseChangeLog>