<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="nvarchar.type" value="character varying" dbms="postgresql" />
    <property name="nvarchar.type" value="nvarchar" dbms="mssql" />

    <changeSet id="Add faculty_school_id to early_alert" author="steve.cody">
        <addColumn tableName="early_alert">
            <column name="faculty_school_id" type="${nvarchar.type}(255)">
                <constraints nullable="true" />
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="early_alert" columnName="faculty_school_id" />
        </rollback>
    </changeSet>

    <changeSet id="Add enrollment_status to early_alert" author="steve.cody">
        <addColumn tableName="early_alert">
            <column name="enrollment_status" type="${nvarchar.type}(80)">
                <constraints nullable="true" />
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="early_alert" columnName="enrollment_status" />
        </rollback>
    </changeSet>
</databaseChangeLog>
