                    </td>
                </tr>
    #end

    #if(!$isPrivate && "$!termCourse.contactNotes" != "")
                <tr>
                    <td colspan="2" style="padding-top: 5px; padding-bottom: 5px; padding-left:10px; padding-right:10px;border-top:1px solid #ABABAB;">
