			<column name="object_status" value="1" />
			<column name="sort_order" value="102" />
		</insert>

		<rollback>
			<delete tableName="config">
				<where>id='5D62D170-D904-11E2-A28F-0800200C9A66'</where>
			</delete>
		</rollback>
